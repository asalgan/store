<div class="container">
    <% @items.each do |item| %>
      <div class="item col4">
        <%= image_tag(item.image) %>
        <ul class="item-list">
          <li><%= item.name %></li>
        	<li class="itemprice">$<%= item.price %>.00</li>
        	<li><%= link_to 'Details', item %></li>
        	<li><%= link_to 'Add to cart', "/add?item_id=#{item.id}", method: 'post', class: "add" %></li>
        </ul>
      </div>
    <% end %>
  </div>
  <br>
